@model IEnumerable<Library.Models.Blogpost>

@{
    ViewData["Title"] = "Blog Post";
}

<h1 class=" text-center">Blog Post</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover table table-striped">
    <thead>
        <tr class=" bg-info text-white ">

            <th class=" bg-info  text-white">
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th class=" bg-info  text-white">
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th class=" bg-info  text-white">
                @Html.DisplayNameFor(model => model.Posted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posted)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BlogId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BlogId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
