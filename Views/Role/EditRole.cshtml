@model EditRoleViewModel

@{ 
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <lable asp-for="Id" class="col-sm-2 col-form-lable"></lable>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class=" form-control" />
        </div>
    </div>
    <div class="form-group row">
        <lable asp-for="RoleName" class="col-sm-2 col-form-lable"></lable>
        <div class="col-sm-10">
            <input asp-for="RoleName" class=" form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-for="RoleName" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" asp-action="ListRoles"> Cancel </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
           <h3> Users in this Role </h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                    <h5 class="card-title">None at the moment</h5>
            }
            </div>
        <div class="card-footer">
            <a asp-controller="Role" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Add or Remove User</a>            
        </div>
    </div>  
</form>