@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
 }

    <h1>All Roles</h1>

    @if (Model.Any())
    {
         <a class="btn btn-primary mb-3" style="width:auto" asp-controller="Role" asp-action="CreateRole"> Add New Role </a>
        foreach(var role in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id : @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title"> @role.Name </h5>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary"
                     asp-controller="Role" asp-action="EditRole" asp-route-id="@role.Id"> 
                    Edit </a>
                    <a href="#" class="btn btn-danger"> Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles existed
            </div>
            <div class="card-body">
                <h5 class="card-title">please create the role by clicking on the below button</h5>
                <a class="btn btn-primary" style="width:auto" asp-controller="Role" asp-action="Create Role"> Create Role </a>

            </div>
        </div>
    }

