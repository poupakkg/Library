@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
 }

    <h1>All Roles</h1>

    @if (Model.Any())
    {
         <a  asp-controller="Role" asp-action="CreateRole" class="btn btn-primary mb-3" style="width:auto"> Add New Role </a>

        foreach(var role in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id : @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title"> @role.Name </h5>
                </div>
                <div class="card-footer">
                    <a asp-controller="Role" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Role" asp-action="CreateRole" asp-route-id="@role.Name"class="btn btn-danger"> Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles existed
            </div>
            <div class="card-body">
                <h5 class="card-title">please create the role by clicking on the below button</h5>
                <a asp-controller="Role" asp-action="Create Role" class="btn btn-primary" style="width:auto" > Create Role </a>
            </div>
        </div>
    }

